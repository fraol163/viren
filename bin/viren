#!/usr/bin/env node

const { spawn } = require('child_process');
const path = require('path');
const fs = require('fs');

const isWindows = process.platform === 'win32';
const binName = isWindows ? 'viren-core.exe' : 'viren-core';
const binPath = path.join(__dirname, binName);

if (!fs.existsSync(binPath)) {
    console.error(`Error: Viren core binary not found at ${binPath}`);
    console.error('Please try reinstalling: npm install -g viren');
    process.exit(1);
}

const args = process.argv.slice(2);
const viren = spawn(binPath, args, { stdio: 'inherit' });

viren.on('error', (err) => {
    console.error('Failed to start Viren:', err);
    process.exit(1);
});

viren.on('exit', (code) => {
    process.exit(code);
});
